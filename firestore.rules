rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public reads for catalog-like collections, restrict writes
    // to authenticated users. Adjust collection rules as needed.
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Default fallback: require authentication for writes, allow reads.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
