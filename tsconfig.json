{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020"],
    "outDir": "./lib",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*/src"],
      "@packages/*": ["src/packages/*/src"]
    },
    "moduleResolution": "bundler"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist", "coverage", "src/**", "lib"]
}

