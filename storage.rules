rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public assets placed under /public are readable by anyone.
    match /public/{allPaths=**} {
      allow read;
    }

    // All other files require authentication for writes; reads are allowed
    // only to authenticated users to prevent accidental public exposure.
    match /{allPaths=**} {
      allow read: if request.auth != null; 
      allow write: if request.auth != null;
    }
  }
}
